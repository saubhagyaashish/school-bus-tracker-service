# Database
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/school_bus_tracker?schema=public"

# Server
PORT=3001
NODE_ENV=development

# Traccar
TRACCAR_API_URL=http://localhost:8082/api
TRACCAR_WS_URL=ws://localhost:8082/api/socket

# JWT Secret (generate a strong one for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Firebase (optional - for push notifications)
# FIREBASE_PROJECT_ID=
# FIREBASE_CLIENT_EMAIL=
# FIREBASE_PRIVATE_KEY=

# Simulation Mode - Enable to use mock bus data when Traccar is unavailable
ENABLE_SIMULATION=true
